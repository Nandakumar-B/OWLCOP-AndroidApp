<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OWLCOP" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTheme">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/input_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="smallCard">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_background</item>
    </style>
    <style name="headText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#866F0C</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="valueText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="zoomAlert">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>